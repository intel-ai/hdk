from Cython.Build import cythonize
from distutils.core import setup, Extension

import os
import numpy as np
import pyarrow as pa


include_dirs = [
    np.get_include(),
    pa.get_include(),
    "@CMAKE_CURRENT_SOURCE_DIR@",
    "@CMAKE_SOURCE_DIR@",
    "@CMAKE_SOURCE_DIR@/omniscidb",
    "@CMAKE_SOURCE_DIR@/omniscidb/ThirdParty",
    "@CMAKE_SOURCE_DIR@/omniscidb/ThirdParty/rapidjson",
    "@LLVM_INCLUDE_DIRS@",
]


# conda-forge packages hdk and pyhdk should be built separately.
# HDK_ROOT_PATH is defined by the hdk activate script that
# determines the location of HDK shared libraries required for
# pyhdk.
def get_hdk_shared_libs() -> list:
    if "HDK_ROOT_PATH" in os.environ:
        return [os.path.join(os.environ["HDK_ROOT_PATH"], "lib64")]
    return []


def gen_compile_flags(os_name: str) -> list:
    if not isinstance(os_name, str):
        raise TypeError("os_name is not a string: ", os_name)
    cpp_version_flags = ["-std=c++17"]
    if os_name == "nt":
        cpp_version_flags = [
            "/std:c++17",
            "/Zc:__cplusplus",
            "/DBOOST_USE_WINAPI_VERSION=0x0600",
        ]
    return [
        *(cpp_version_flags),
        *("@CDEFS@".split()),
        "-D__STDC_FORMAT_MACROS",
        "-DBOOST_LOG_DYN_LINK",
    ]


def gen_rt_libs(os_name: str) -> list:
    if os_name != "nt":
        return [*(pa.get_library_dirs()), *(get_hdk_shared_libs())]
    return []


def gen_lib_dirs(sql: bool = False) -> list:
    ret = ["@CMAKE_CURRENT_BINARY_DIR@", ".", *(get_hdk_shared_libs())]
    if sql:
        return ret
    return [*(pa.get_library_dirs()), *(ret)]


common = Extension(
    "pyhdk._common",
    ["@CMAKE_CURRENT_SOURCE_DIR@/pyhdk/_common.pyx"],
    language="c++",
    include_dirs=include_dirs,
    library_dirs=gen_lib_dirs(),
    runtime_library_dirs=gen_rt_libs(os.name),
    libraries=[
        *(pa.get_libraries()),
        "QueryEngine",
        "ConfigBuilder",
        "Logger",
        "Shared",
    ],
    extra_compile_args=gen_compile_flags(os.name),
)

execute = Extension(
    "pyhdk._execute",
    ["@CMAKE_CURRENT_SOURCE_DIR@/pyhdk/_execute.pyx"],
    language="c++",
    include_dirs=include_dirs,
    library_dirs=gen_lib_dirs(),
    runtime_library_dirs=gen_rt_libs(os.name),
    libraries=[*(pa.get_libraries()), "QueryEngine"],
    extra_compile_args=gen_compile_flags(os.name),
)

sql = Extension(
    "pyhdk._sql",
    ["@CMAKE_CURRENT_SOURCE_DIR@/pyhdk/_sql.pyx"],
    language="c++",
    include_dirs=include_dirs,
    library_dirs=gen_lib_dirs(True),
    libraries=["Calcite", "QueryEngine", "ResultSet", "ResultSetRegistry", "Logger"],
    extra_compile_args=gen_compile_flags(os.name),
)

storage = Extension(
    "pyhdk._storage",
    ["@CMAKE_CURRENT_SOURCE_DIR@/pyhdk/_storage.pyx"],
    language="c++",
    include_dirs=include_dirs,
    library_dirs=gen_lib_dirs(),
    runtime_library_dirs=gen_rt_libs(os.name),
    libraries=[
        *(pa.get_libraries()),
        "ArrowStorage",
        "SchemaMgr",
        "DataMgr",
        "IR",
        "Logger",
    ],
    extra_compile_args=gen_compile_flags(os.name),
)

ir = Extension(
    "pyhdk._ir",
    ["@CMAKE_CURRENT_SOURCE_DIR@/pyhdk/_ir.pyx"],
    language="c++",
    include_dirs=include_dirs,
    library_dirs=gen_lib_dirs(),
    runtime_library_dirs=gen_rt_libs(os.name),
    libraries=[*(pa.get_libraries()), "IR"],
    extra_compile_args=gen_compile_flags(os.name),
)

builder = Extension(
    "pyhdk._builder",
    ["@CMAKE_CURRENT_SOURCE_DIR@/pyhdk/_builder.pyx"],
    language="c++",
    include_dirs=include_dirs,
    library_dirs=gen_lib_dirs(),
    runtime_library_dirs=gen_rt_libs(os.name),
    libraries=[*(pa.get_libraries()), "QueryBuilder", "IR"],
    extra_compile_args=gen_compile_flags(os.name),
)

setup(
    name="pyhdk",
    version="@HDK_VERSION_RAW@",
    packages=["pyhdk"],
    package_dir={"pyhdk": "@CMAKE_CURRENT_SOURCE_DIR@/pyhdk"},
    ext_modules=cythonize(
        [common, execute, sql, storage, ir, builder],
        compiler_directives={
            "c_string_type": "str",
            "c_string_encoding": "utf8",
            "language_level": "3",
        },
        include_path=["@CMAKE_CURRENT_SOURCE_DIR@"],
        gdb_debug=False,  # TODO: drive this via cmake build type
    ),
)
